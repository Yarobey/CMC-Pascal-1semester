program Task_2_var_2(input,output);
type
{переопределение стандартного имени integer:}
    integer = longint;
var
    n: integer;

{здесь ваше описание булевской функции IsSame(n)}
function IsSame(n: integer): boolean;
var
    s: set of 0..9;
    flag: boolean;
begin
    s := [];
    flag := false;
    while (n > 0) and not flag do begin
        if (n mod 10) in s then
            flag := true;
        s := s + [n mod 10];
        n := n div 10;
    end;
    IsSame := flag;
end;

begin 
    {в разделе операторов этой программы - НИЧЕГО НЕ МЕНЯТЬ !!!}
