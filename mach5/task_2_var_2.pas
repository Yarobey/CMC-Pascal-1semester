    writeln('Task_2_var_2 (IsSame)');
    writeln('=====================');
    {здесь ваше решение}
    
    read(n);
    while n <> 0 do begin
        writeln(n, ': ', IsSame(n), '    ');
        read(n)
    end;
    writeln
end.

